<Window x:Class="SmartMeal.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartMeal.Wpf.Views"
        mc:Ignorable="d"
        Title="Тестовое WPF-приложение для SmartMealService"
        WindowStyle="None"
        ResizeMode="CanMinimize"
        Height="500" Width="900"
        Background="#FFFFCC">

    <Border BorderBrush="Black" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Background="#FFE6B3" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Тестовое WPF-приложение для SmartMealService"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           FontWeight="Bold"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="—"
                            Width="45" Height="35"
                            Command="{Binding MinimizeCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="16"
                            Cursor="Hand"/>
                    <Button Content="✕"
                            Width="45" Height="35"
                            Command="{Binding CloseCommand}"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="16"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>

            <!-- Main Content -->
            <Grid Grid.Row="1" Margin="10">
                <DataGrid ItemsSource="{Binding Variables}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="False"
                          CanUserSortColumns="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="All"
                          BorderBrush="Black"
                          BorderThickness="1"
                          Background="White"
                          RowBackground="White"
                          AlternatingRowBackground="#FFFFF0">

                    <DataGrid.Columns>
                        <!-- Column: № -->
                        <DataGridTextColumn Header="№"
                                            Binding="{Binding Index}"
                                            Width="50"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Column: Поле -->
                        <DataGridTextColumn Header="Поле"
                                            Binding="{Binding Name}"
                                            Width="200"
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="5,0,0,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Column: Значение -->
                        <DataGridTextColumn Header="Значение"
                                            Binding="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                            Width="*"
                                            IsReadOnly="False">
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="2"/>
                                </Style>
                            </DataGridTextColumn.EditingElementStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="5,0,0,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Column: Комментарий -->
                        <DataGridTextColumn Header="Комментарий"
                                            Binding="{Binding Comment, UpdateSourceTrigger=PropertyChanged}"
                                            Width="200"
                                            IsReadOnly="False">
                            <DataGridTextColumn.EditingElementStyle>
                                <Style TargetType="TextBox">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="2"/>
                                </Style>
                            </DataGridTextColumn.EditingElementStyle>
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="5,0,0,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Column: Button >> -->
                        <DataGridTemplateColumn Header="" Width="60">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="&gt;&gt;"
                                            Width="50"
                                            Height="25"
                                            HorizontalAlignment="Center"
                                            Command="{Binding DataContext.SaveCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            Cursor="Hand"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Border>
</Window>
